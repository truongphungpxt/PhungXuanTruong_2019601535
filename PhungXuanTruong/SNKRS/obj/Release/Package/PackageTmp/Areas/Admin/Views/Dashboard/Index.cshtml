@model SNKRS.Areas.Admin.ViewModels.DashboardViewModel
@{
    ViewBag.Title = "Dashboard";
    ViewBag.Active = "Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-3 col-6">

        <div class="small-box bg-info">
            <div class="inner">
                <h3>@string.Format("{0:#,##0}", Model.Total)</h3>
                <p>Total</p>
            </div>
            <div class="icon">
                <i class="ion ion-bag"></i>
            </div>
            <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>

    <div class="col-lg-3 col-6">

        <div class="small-box bg-success">
            <div class="inner">
                <h3>@string.Format("{0:#,##0}", Model.ThisMonth)</h3>
                <p>This month</p>
            </div>
            <div class="icon">
                <i class="ion ion-stats-bars"></i>
            </div>
            <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>

    <div class="col-lg-3 col-6">

        <div class="small-box bg-warning">
            <div class="inner">
                <h3>@string.Format("{0:#,##0}", Model.Pending)</h3>
                <p>Pending</p>
            </div>
            <div class="icon">
                <i class="ion ion-person-add"></i>
            </div>
            <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>

    <div class="col-lg-3 col-6">

        <div class="small-box bg-danger">
            <div class="inner">
                <h3>@string.Format("{0:#,##0}", Model.Cancelled)</h3>
                <p>Cancelled</p>
            </div>
            <div class="icon">
                <i class="ion ion-pie-graph"></i>
            </div>
            <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>

</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">


            <div class="card-header ui-sortable-handle" style="cursor: move;">
                <h3 class="card-title">
                    <i class="fas fa-chart-pie mr-1"></i>
                    Sales
                </h3>

                <div class="card-tools">
                    @using (Html.BeginForm("Index", "Dashboard"))
                    {
                        @Html.AntiForgeryToken()

                        <ul class="nav nav-pills ml-auto">
                            <li class="nav-item">
                                <input name="datePicker" class="form-control" type="date" id="datePicker" value="" />
                            </li>
                            <li class="nav-item">
                                <input type="submit" onclick="submit()" class="ml-3 nav-link active" href="#sales-chart" data-toggle="tab" value="View">
                            </li>
                        </ul>
                    }
                </div>


            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-lg">

                        <div class="small-box bg-gradient-primary">
                            <div class="inner">
                                <h3>@string.Format("{0:#,##0}", Model.DayTotal)</h3>
                                <p>Today total</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-pie-graph"></i>
                            </div>
                            <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                        </div>
                    </div>
                    <div class="col-lg">

                        <div class="small-box bg-gradient-primary">
                            <div class="inner">
                                <h3>@string.Format("{0:#,##0}", Model.DayOrder)</h3>
                                <p>Orders</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-pie-graph"></i>
                            </div>
                            <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                        </div>
                    </div>
                </div>
                <h2>Top Selling</h2>

                <ul class="list-group">
                    @foreach (var item in Model.DayProducts)
                    {
                        <li class="list-group-item">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <img src="@item.Image" width="100px">
                                </div>
                                <div class="flex-grow-1 ms-3 ml-3">
                                    <p><b>#@item.Id</b></p>
                                    <p>@item.Name</p>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

@section CustomScript {
    <script>
        var now = new Date();

        var day = ("0" + now.getDate()).slice(-2);
        var month = ("0" + (now.getMonth() + 1)).slice(-2);

        var today = now.getFullYear() + "-" + (month) + "-" + (day);

        $('#datePicker').val(today);

        function submit() {
            $("form").submit();
        }
    </script>
}